use math-extra {
  mean,
  clamp,
  sum,
  median,
  lerp,
  degToRad,
  radToDeg
}

say "Testing math-extra functions:"
say "mean([1,2,3,4,5]): " + mean([1,2,3,4,5])
say "clamp(15, 0, 10): " + clamp(15, 0, 10)
say "sum([1,2,3]): " + sum([1,2,3])
say "median([1,2,3,4,5]): " + median([1,2,3,4,5])
say "lerp(0, 10, 0.5): " + lerp(0, 10, 0.5)
say "degToRad(180): " + degToRad(180)
say "radToDeg(3.141592653589793): " + radToDeg(3.141592653589793)